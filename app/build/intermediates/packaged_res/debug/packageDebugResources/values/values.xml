<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="charcoal_gray">#3C3F41</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <color name="purple_700">#A78FA4</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Ai Chat</string>
    <style name="Base.Theme.AiChat" parent="Theme.Material3.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SuggestionChipStyle">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">#2F2F2F</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="SuggestionChipText">
        <item name="android:textColor">#F1F1F1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
    <style name="Theme.AiChat" parent="Base.Theme.AiChat"/>
    <style name="ToolbarTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">#FFFFFF</item> 
        <item name="android:textSize">20sp</item>
    </style>
</resources>